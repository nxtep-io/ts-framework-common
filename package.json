{
  "name": "ts-framework-common",
  "version": "2.4.0",
  "description": "A minimalistic web framework for TS",
  "author": "Luis Brito <luis@nxtep.io>",
  "license": "MIT",
  "main": "./dist/index.js",
  "typings": "./dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nxtep-io/ts-framework-common.git"
  },
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "tsc",
    "clean": "rimraf ./dist ./docs",
    "predocs": "rimraf ./docs",
    "docs": "./scripts/docs.sh",
    "test": "jest --config jest.json",
    "lint": "tslint --config tslint.json --project ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "{api,config,tests}/**/*.ts": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@sentry/node": "^4.4.1",
    "@types/express": "^4.16.0",
    "nano-errors": "nxtep-io/nano-errors"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.4.2",
    "lint-staged": "^7.2.0",
    "nodemon": "^1.18.7",
    "nxtep-typedoc-theme": "nxtep-io/nxtep-typedoc-theme",
    "prettier": "^1.14.0",
    "rimraf": "^2.6.2",
    "sinon": "^5.0.3",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-no-circular-imports": "^0.6.2",
    "typedoc": "^0.14.2",
    "typescript": "^3.4.5"
  }
}
